<div class="container">
    <div class="row">
        <div class="col-md-7">
            <div id="code"></div>
            <div class="overview">
                <input type="hidden" value="{{gig._id}}" id="gig_id" />
                <div clasa="template-card">
                    <div class="name">
                        <h2 class="h2-size">{{gig.title}}</h2>
                        <hr />
                        <img class="image-test" src="{{gig.picture}}" />

                    </div>
                </div>
            </div>

            <div class="overview">
                <div clasa="about-card">
                    <div class="name">
                        <h2 class="h2-size">About gig</h2>
                        <hr />
                        <h4>{{gig.about}} </h4>
                    </div>
                </div>
            </div>
            </div>
            <div class="col-m2-2">
                 <div class="overview"></div>
                <div clasa="order-card">
                    <div class="name">
                     <h3>${{gig.price}} Order details</h3>    
                     <a href="/checkout/single_package/{{gig._id}}" class="btn btn-success btn-lg">Proceed to Order </a>    
                     <button class="btn btn-success btn-lg space-left" id="add-to-cart"><i class="fa fa-shopping-cart"></i></button>  
                    </div>
                </div>
              </div>
            </div>
        </div>
    </div>

